<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glenyoung.blackjackandroid.GameScreenActivity">

    <TextView
        android:id="@+id/dealer_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/player1_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginRight="32dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/player1_cards" />

    <TextView
        android:id="@+id/player3_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="32dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/p3_card3" />

    <TextView
        android:id="@+id/player2_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/player2_cards" />

    <Button
        android:id="@+id/stand_button"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:onClick="onStandButtonClick"
        android:text="@string/stand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/hit_button"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:onClick="onHitButtonClick"
        android:text="@string/hit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="441dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/player_turn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/stand_button"
        app:layout_constraintRight_toLeftOf="@+id/hit_button" />

    <Button
        android:id="@+id/deal_button"
        android:layout_width="141dp"
        android:layout_height="54dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onDealButtonClick"
        android:text="@string/deal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="443dp" />


    <TextView
        android:id="@+id/p3_card3"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text="TextView"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/stand_button" />

    <TextView
        android:id="@+id/player2_cards"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text="TextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/player_turn"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/player1_cards"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_marginRight="26dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hit_button"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintHorizontal_bias="0.501" />
</android.support.constraint.ConstraintLayout>
